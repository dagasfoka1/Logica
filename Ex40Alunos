#include <stdio.h>
#include <stdlib.h>
int N, i, X;
int P1[5];
int P2[5];
float M;
int main()
{
for(i=0;i<5;i++){
X=i +1;
printf("Digite o valor das notas do %d째 aluno(a)\n P1: \n",X);
scanf("%d", &P1[i]);
printf("P2: \n");
scanf("%d", &P2[i]);
M=(P2[i]+P1[i])/2;
if (M>=6) {
    printf("O %d째 aluno(a) foi aprovado.\n", X)  ;
    
}
else{
    if(M>=4){
     printf("O %d째 aluno(a) ficou de rec.\n", X)  ;
    }
    else{
    printf("O %d째 aluno(a) foi reprovado.\n", X)  ;
}
}
}
return 0;
}
